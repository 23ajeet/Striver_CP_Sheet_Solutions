#include<iostream>
using namespace std;

int main (){

//n is number of statement or number of operations

    int X=0,n;
    cin>>n;
    string s;
    
    while (n>0){
        cin >>s;
        if (s=="X++"||s=="++X"){
            X++;
        }
        else X--;
        
        n--;
    }
    cout << X;
    
}
